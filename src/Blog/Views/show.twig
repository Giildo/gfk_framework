{% extends 'template.twig' %}

{% block title post.name %}

{% block content %}
    <div class="row">
        <h1 class="col-12">{{ post.name }}</h1>
        <p class="col-12 text-muted">Créé {{ post.createdAt | ago }}</p>
    </div>

    <div class="row">
        <p class="col-12">{{ post.content | nl2br }}</p>
    </div>
{% endblock %}
